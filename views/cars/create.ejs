<div class="container mt-4">
  <div class="card card-custom p-4 col-md-6 mx-auto">
    <h3 class="mb-4">
      <i class="fas fa-plus-circle"></i> Add New Car
    </h3>

    <form method="post" action="/api/cars">
      <div class="mb-3">
        <label class="form-label">
          <i class="fas fa-tag"></i> Brand
        </label>
        <input type="text" name="brand" class="form-control" placeholder="e.g., Toyota" required />
      </div>

      <div class="mb-3">
        <label class="form-label">
          <i class="fas fa-car"></i> Model
        </label>
        <input type="text" name="model" class="form-control" placeholder="e.g., Camry" required />
      </div>

      <div class="mb-3">
        <label class="form-label">
          <i class="fas fa-dollar-sign"></i> Price Per Day
        </label>
        <input type="number" name="pricePerDay" class="form-control" placeholder="e.g., 50" min="1" step="0.01" required />
      </div>

      <div class="d-flex gap-2 justify-content-end">
        <a href="/ui/cars" class="btn btn-secondary">
          <i class="fas fa-times"></i> Cancel
        </a>
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-save"></i> Create Car
        </button>
      </div>
    </form>
  </div>
</div>
