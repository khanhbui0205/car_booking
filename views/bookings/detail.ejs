<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Booking Details - Car Booking System</title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome Icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body class="bg-light">

<header>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold fs-5" href="/dashboard">
        <i class="fas fa-car"></i> Car Booking System
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="/dashboard">
            <i class="fas fa-home"></i> Dashboard
          </a>
          <a class="nav-link" href="/ui/cars">
            <i class="fas fa-car"></i> Cars
          </a>
          <a class="nav-link active" href="/ui/bookings">
            <i class="fas fa-calendar-alt"></i> Bookings
          </a>
          <% if (user && user.role === 'admin') { %>
            <a class="nav-link" href="/ui/users">
              <i class="fas fa-users"></i> Users
            </a>
          <% } %>
          <div class="nav-divider" style="width: 1px; height: 25px; background: rgba(255,255,255,0.3); margin: 0 15px;"></div>
          <a class="nav-link" href="/auth/logout" style="color: #ff6b6b !important;">
            <i class="fas fa-sign-out-alt"></i> Logout
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<main>
  <div class="container" style="max-width: 800px;">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
      <ol class="breadcrumb" style="background: transparent; padding: 0; margin: 0;">
        <li class="breadcrumb-item"><a href="/dashboard" style="color: #0066cc; text-decoration: none;">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/ui/bookings" style="color: #0066cc; text-decoration: none;">Bookings</a></li>
        <li class="breadcrumb-item active">Booking #<%= booking._id.toString().substring(0, 8) %></li>
      </ol>
    </nav>

    <!-- Main Card -->
    <div class="card card-custom p-0">
      <div style="background: linear-gradient(135deg, #0066cc 0%, #1a7fd9 100%); color: white; padding: 30px;">
        <h3 style="margin: 0;">
          <i class="fas fa-receipt me-2"></i> Booking Details
        </h3>
        <p style="margin: 5px 0 0 0; opacity: 0.9;">Booking ID: #<%= booking._id.toString().substring(0, 12) %></p>
      </div>

      <div class="card-body p-4">
        <!-- Status -->
        <div style="background: linear-gradient(135deg, #e6f2ff 0%, #cce5ff 100%); padding: 20px; border-radius: 12px; border-left: 4px solid #0066cc; margin-bottom: 30px;">
          <div style="display: flex; justify-content: space-between; align-items: center;">
            <div>
              <p style="margin: 0; color: #666; font-size: 0.9rem; text-transform: uppercase; font-weight: 600;">Booking Status</p>
              <p style="margin: 5px 0 0 0; font-size: 1.3rem; font-weight: 800; color: #0066cc;">
                <% if (booking.status === "ACTIVE") { %>
                  <i class="fas fa-hourglass-end me-2"></i> ACTIVE
                <% } else if (booking.status === "CONFIRMED") { %>
                  <i class="fas fa-check-circle me-2"></i> CONFIRMED
                <% } else { %>
                  <i class="fas fa-times-circle me-2"></i> CANCELLED
                <% } %>
              </p>
            </div>
            <div style="text-align: right;">
              <p style="margin: 0; color: #666; font-size: 0.9rem; text-transform: uppercase; font-weight: 600;">Total Price</p>
              <p style="margin: 5px 0 0 0; font-size: 1.8rem; font-weight: 800; color: #0066cc;">
                <%= booking.totalPrice %>đ
              </p>
            </div>
          </div>
        </div>

        <!-- Guest Information -->
        <div class="mb-4">
          <h5 style="color: #0066cc; font-weight: 700; margin-bottom: 15px;">
            <i class="fas fa-user-circle me-2"></i> Guest Information
          </h5>
          <div style="background: white; border-radius: 12px; padding: 20px; border: 2px solid #e0e0e0;">
            <div class="detail-row">
              <label>
                <i class="fas fa-user me-2" style="color: #0066cc;"></i> Name
              </label>
              <span><strong><%= booking.userId.name %></strong></span>
            </div>
            <div class="detail-row">
              <label>
                <i class="fas fa-envelope me-2" style="color: #0066cc;"></i> Email
              </label>
              <span><%= booking.userId.email %></span>
            </div>
          </div>
        </div>

        <!-- Vehicle Information -->
        <div class="mb-4">
          <h5 style="color: #0066cc; font-weight: 700; margin-bottom: 15px;">
            <i class="fas fa-car me-2"></i> Vehicle Information
          </h5>
          <div style="background: white; border-radius: 12px; padding: 20px; border: 2px solid #e0e0e0;">
            <div class="detail-row">
              <label>
                <i class="fas fa-cube me-2" style="color: #0066cc;"></i> Brand
              </label>
              <span><strong><%= booking.carId.brand %></strong></span>
            </div>
            <div class="detail-row">
              <label>
                <i class="fas fa-car-side me-2" style="color: #0066cc;"></i> Model
              </label>
              <span><strong><%= booking.carId.model %></strong></span>
            </div>
            <div class="detail-row">
              <label>
                <i class="fas fa-dollar-sign me-2" style="color: #0066cc;"></i> Price Per Day
              </label>
              <span style="color: #0066cc; font-weight: 800;"><%= booking.carId.pricePerDay %>đ</span>
            </div>
          </div>
        </div>

        <!-- Booking Dates -->
        <div class="mb-4">
          <h5 style="color: #0066cc; font-weight: 700; margin-bottom: 15px;">
            <i class="fas fa-calendar-alt me-2"></i> Rental Dates
          </h5>
          <div style="background: white; border-radius: 12px; padding: 20px; border: 2px solid #e0e0e0;">
            <div class="detail-row">
              <label>
                <i class="fas fa-calendar-check me-2" style="color: #0066cc;"></i> Start Date
              </label>
              <span><strong><%= new Date(booking.startDate).toLocaleDateString('vi-VN', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></strong></span>
            </div>
            <div class="detail-row">
              <label>
                <i class="fas fa-calendar-times me-2" style="color: #0066cc;"></i> End Date
              </label>
              <span><strong><%= new Date(booking.endDate).toLocaleDateString('vi-VN', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></strong></span>
            </div>
            <div class="detail-row">
              <label>
                <i class="fas fa-clock me-2" style="color: #0066cc;"></i> Duration
              </label>
              <span>
                <% const days = Math.ceil((new Date(booking.endDate) - new Date(booking.startDate)) / (1000 * 60 * 60 * 24)); %>
                <strong><%= days %> day<%= days !== 1 ? 's' : '' %></strong>
              </span>
            </div>
          </div>
        </div>

        <!-- Actions -->
        <div style="display: flex; gap: 12px; margin-top: 30px;">
          <a href="/ui/bookings" class="btn btn-secondary flex-grow-1">
            <i class="fas fa-arrow-left me-2"></i> Back to Bookings
          </a>
          
          <% if (booking.status === "ACTIVE") { %>
            <button id="confirmBtn" class="btn btn-success flex-grow-1" onclick="confirmBooking('<%= booking._id %>')">
              <i class="fas fa-check-circle me-2"></i> Confirm Booking
            </button>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</main>

<footer class="bg-dark text-white text-center py-4 mt-5">
  <p class="mb-0"><i class="fas fa-copyright"></i> 2026 – SDN302 Car Booking System</p>
</footer>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
async function confirmBooking(bookingId) {
  if (!confirm('Are you sure you want to confirm this booking?')) {
    return;
  }

  try {
    const userId = '<%= user.id %>';
    
    const response = await fetch(`/api/bookings/${bookingId}/confirm`, {
      method: 'PUT',
      headers: {
        'Content-Type': 'application/json',
        'Authorization': `Bearer ${userId}`
      }
    });

    if (response.ok) {
      alert('Booking confirmed successfully!');
      document.getElementById('confirmBtn').style.display = 'none';
      location.reload();
    } else {
      const error = await response.json();
      alert('Error: ' + (error.message || 'Failed to confirm booking'));
    }
  } catch (error) {
    alert('Error: ' + error.message);
  }
}
</script>
</body>
</html>
